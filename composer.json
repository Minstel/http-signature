{
    "name": "lto/http-signature",
    "description": "Implementation of the IETF HTTP Signatures draft RFC",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        }
    ],
    "support": {
        "issues": "https://github.com/legalthings/http-signature/issues",
        "source": "https://github.com/legalthings/http-signature"
    },
    "require": {
        "php": ">=7.2.0",
        "improved/improved": "^1.0",
        "nesbot/carbon": "^2.12",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "jasny/php-code-quality": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "LTO\\HttpSignature\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LTO\\HttpSignature\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpstan analyse",
            "phpcs -p src"
        ],
        "post-create-project-cmd": [
            "bash init.sh && rm init.sh"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
